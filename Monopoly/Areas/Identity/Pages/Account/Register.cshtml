@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_AuthentificationLayout.cshtml";
}

<div class="login-form-icon">
    <i class="fas fa-user-plus fa-9x text-secondary icon-margin"></i>
</div>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.FirstName" class="custom-label"></label>
                <input asp-for="Input.FirstName" class="custom-input" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.LastName" class="custom-label"></label>
                <input asp-for="Input.LastName" class="custom-input" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Input.Email" class="custom-label"></label>
        <input asp-for="Input.Email" class="custom-input" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.Password" class="custom-label"></label>
                <input asp-for="Input.Password" class="custom-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="custom-label"></label>
                <input asp-for="Input.ConfirmPassword" class="custom-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary btn-block custom-submit-buttons">Register</button>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
