@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/layout.css" />
</head>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card-custom login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="custom-nav-link" href='/Identity/Account/Login'>Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="custom-nav-link" href='/Identity/Account/Register'>Create account</a>
                    </li>
                </ul> 
            </div>
            <div class="card-content card-content-background">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false);
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('custom-active-tab');
                }
            })
        })
    </script>
 }